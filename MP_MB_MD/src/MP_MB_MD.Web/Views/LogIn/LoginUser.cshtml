    <meta name="msapplication-TileImage" content="~/assets_For_login/img/favicons/mstile-150x150.png">
    <meta name="theme-color" content="#ffffff">
    <!-- ===============================================-->
    <!--    Stylesheets-->
    <!-- ===============================================-->
    <link href="~/assets_For_login/css/theme.min.css" rel="stylesheet" />
    <link href="~/login/style.css" rel="stylesheet" />
    <link href="~/login/responsive.css" rel="stylesheet" />
    <style>
        #captcha {
            font-size: 30px;
            letter-spacing: 3px;
        }

        .redText {
            color: #a03146;
            font-weight: bold;
        }

        .greenText {
            color: #1a3815;
            font-weight: bold;
        }

        .bottomborder {
            border-bottom: 2px solid #025ebb;
        }

        #top {
            height: 100%;
        }

        .textdiv {
            position: relative;
            z-index: 2;
        }
    </style>
</head>

<body>
    <!-- ===============================================-->
    <!--    Main Content-->
    <!-- ===============================================-->
    <main class="main" id="top">

        <!-- ============================================-->
        <!-- ============================================-->

        <nav class="navbar navbar-expand-lg navbar-light  py-3 d-block bottomborder" data-navbar-on-scroll="data-navbar-on-scroll">
            <div class="container-fluid">
                <div class="col-md-9">
                    <a class="navbar-brand" href="index.html">
                        <img src="~/assets_For_login/img/gallery/logo-n.jpg" class="govt" alt="logo" />
                    </a>
                </div>
                <div class="col-md-3">
                    <img src="~/assets_For_login/img/5tlogo.png" height="" alt="logo" class="naveen_logo" /></a>
                </div>

            </div>
        </nav>
        <section class="pt-6 bg-600" id="home">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-5 col-lg-5 order-0 order-md-1">
                        <div class="wrapper form_top">
                            <div class="title-text">
                                <div class="title login">Login</div>
                                <!-- <div class="title signup">Signup Form</div> -->
                            </div>
                            <div class="form-container">

                                <div class="form-inner">
                                    <form asp-controller="LogIn" asp-action="LoginUser" method="post">
                                        @if (TempData["warning"] != null)
                                        {
                                            <span class="text-danger" readonly>@TempData["warning"]</span>
                                            <script>
                setTimeout(function() {
                    var element = document.getElementsByClassName("text-danger")[0];
                    element.style.display = "none";
                }, 20000); // 20 seconds
                                            </script>
                                        }
                                        <div class="field">
                                            <input type="text" placeholder="User Name / ଇଉଜର ନାମ" required name="Username" autocomplete="off">
                                        </div>
                                        <div class="field field1">
                                            <input type="password" placeholder="Password / ପାସୱାର୍ଡ" required name="password" autocomplete="off">
                                        </div>
                                        <div class="field btn" style="padding: 0;">
                                            <div class="btn-layer"></div>
                                            <input type="submit" value="Login">
                                        </div>
                                    </form>
                                </div>

                            </div>
                        </div>
                    </div>

                    <div class="col-md-7 col-lg-7 text-center py-6">
                        <div style="text-align: center;margin-top: -120px;margin-bottom: 15px;" class="fivet">
                            <img src="~/assets_For_login/img/mdlogo.png" height="" alt="logo">
                        </div>
                        <div class="textdiv">
                            <h2 class="fw-bold font-sans-serif">MP-MB-MD</h2>
                            <h1 class="mb-2 fsize font-sans-serif" style="font-weight: 500;">Mo Panchayat Mo Block Mo Dhenkanal/</h1>
                            <h1 class="mb-5 fsize font-sans-serif">ମୋ-ପଞ୍ଚାୟତ ମୋ-ବ୍ଲକ୍ ମୋ-ଢେଙ୍କାନାଳ</h1>
                        </div>

                        <img src="~/assets_For_login/img/dance.png" alt="logo" class="dance d-none d-lg-block">
                    </div>


                </div>
            </div>
        </section>

        <!-- ============================================-->
        <!-- <section> begin ============================-->
        <div style="background-color:#121212; padding: 22px;">
            <div class="container">
                <div class="row">
                    <div>
                        <p style="margin-bottom: 0px;color:white;">Design &amp; Developed By <span style="font-weight: 700;"><a href="https://oasystspl.com/" style="color: #0043ff;text-decoration: none;" target="_blank">Oasys Tech Solutions Pvt. Ltd.</a></span></p>
                    </div>
                </div>
            </div><!-- end of .container-->
        </div>











    </main><!-- ===============================================-->
    <!--    End of Main Content-->
    <!-- ===============================================-->
    <!-- ===============================================-->
    <!--    JavaScripts-->
    <!-- ===============================================-->


</body>

</html>